#!/usr/bin/env python3
# -*- coding: iso-8859-1 -*-

import sys

sys.path.append("../lib")

from Shamazing import Shamazing

if len(sys.argv) > 1:
    sha = sys.argv[1]
    print("Longest string: " + str(Shamazing.string(sha)))
    print("Longest integer: " + str(Shamazing.integer(sha)))
else:
    print("Usage: \n\t  ./shamazing 1a5ec33502feb41635f4aa623848ea795eb1210a")
